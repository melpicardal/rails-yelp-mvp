<!DOCTYPE html>
<html>
  <head>
    <title>RailsYelpMvp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to restaurants_path, class: "navbar-brand" do %>
    <%= image_tag "https://media.giphy.com/media/W3kmvYsGLF58dDe987/giphy.gif" %>
  <% end %>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Home", restaurants_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Add Restaurant", new_restaurant_path, class: "nav-link" %>
      </li>
    </ul>
  </div>
</div>

    <%= yield %>
  </body>
</html>
