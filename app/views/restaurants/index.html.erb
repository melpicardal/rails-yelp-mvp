<div class="container mt-5">
  <h1 class="text-center">Restaurants List</h1>
    <ul>
      <% @restaurants.each do |restaurant| %>
        <li>
          <div class="card-product m-3">
            <img src="https://source.unsplash.com/featured/?{restaurant}">
              <h2 class="ml-5"><%= restaurant.name %></h2>
              <%= link_to 'Details', restaurant_path(restaurant), class: "btn btn-ghost ml-3" %>
          </div>
        </li>
      <% end %>
    </ul>
</div>
